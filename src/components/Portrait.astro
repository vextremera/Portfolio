---
import background from "../assets/background.png";
import sprites from "../assets/sprites.svg";
---

<img
  id="background"
  src={background.src}
  alt=""
  fetchpriority="high"
  draggable="false"
  class="h-screen w-screen blur-3xl fixed -z-10"
/>
<div
  class="grid grid-cols-5 grid-rows-6 gap-5 h-screen w-screen pt-10 px-70 py-20 font-inter"
>
  <div
    class="col-span-3 row-span-2 outline-black-500 outline-4 rounded-tl-xl outline-dashed bg-gray-200/30"
  >
    <div class="flex flex-col items-center justify-center h-full font-rubik">
      <h1 class="text-4xl font-bold text-black font-rubik-mono select-none">
        I'm Victor Extremera
      </h1>
      <p class="font-rubik-mono text-lg text-gray-600 select-none">
        Welcome to my portfolio!
      </p>
    </div>
  </div>
  <!-- ABOUT ME -->
  <div
    class="col-span-2 row-span-2 outline-black-500 outline-4 rounded-tr-xl outline-dashed bg-gray-200/30"
  >
    <div class="flex flex-col items-center justify-center h-full font-rubik">
      <h1
        class="text-[42px] text-black font-vt323 font-extrabold px-4 -mt-6 select-none"
      >
        ABOUT ME
      </h1>
      <p
        class="font-rubik-regular font-normal text-2xl px-15 text-center select-none"
      >
        I believe that with
        <b class="text-indigo-600">discipline</b>
